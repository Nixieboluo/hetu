# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 100
indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitetab = true
insert_final_newline = true

[*.{ts,tsx,js,cjs,mjs}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{json,yaml}]
indent_style = space
indent_size = 2
