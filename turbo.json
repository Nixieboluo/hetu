{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "backend#dev": {
      "env": [
        "DATABASE_URL",
        "DATABASE_URL_MIGRATE",
        "S3_ENDPOINT",
        "S3_BUCKET",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY"
      ]
    },
    "migration:generate": {
      "cache": false
    },
    "migration:drop": {
      "cache": false
    },
    "migration:run": {
      "cache": false
    }
  }
}
