{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },

    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },

    "start": {
      "cache": false,
      "persistent": true
    },

    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
