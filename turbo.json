{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "backend#dev": {
      "env": ["DATABASE_URL", "DATABASE_URL_MIGRATE"]
    },
    "migration:generate": {
      "cache": false
    },
    "migration:drop": {
      "cache": false
    },
    "migration:run": {
      "cache": false
    }
  }
}
